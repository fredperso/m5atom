<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Measurement Adjustments"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="24dp"/>

    <!-- Temperature Adjustment -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Temperature"
            android:textSize="16sp"/>

        <Button
            android:id="@+id/tempMinusButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:text="-"/>

        <EditText
            android:id="@+id/tempAdjustment"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal|numberSigned"
            android:text="0.0"
            android:gravity="center"
            android:layout_marginHorizontal="8dp"/>

        <Button
            android:id="@+id/tempPlusButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:text="+"/>
    </LinearLayout>

    <!-- Humidity Adjustment -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Humidity"
            android:textSize="16sp"/>

        <Button
            android:id="@+id/humidityMinusButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:text="-"/>

        <EditText
            android:id="@+id/humidityAdjustment"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal|numberSigned"
            android:text="0.0"
            android:gravity="center"
            android:layout_marginHorizontal="8dp"/>

        <Button
            android:id="@+id/humidityPlusButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:text="+"/>
    </LinearLayout>

    <!-- Pressure Adjustment -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Pressure"
            android:textSize="16sp"/>

        <Button
            android:id="@+id/pressureMinusButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:text="-"/>

        <EditText
            android:id="@+id/pressureAdjustment"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal|numberSigned"
            android:text="0.0"
            android:gravity="center"
            android:layout_marginHorizontal="8dp"/>

        <Button
            android:id="@+id/pressurePlusButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:text="+"/>
    </LinearLayout>

</LinearLayout>
